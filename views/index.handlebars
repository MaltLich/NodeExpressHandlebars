    <div class="col-xs-12 text-center" id="top-bar">
      <h1>Enjoy A Burger</h1>
      <p>
        Burgers that are ready to be delivered are displayed on the left.  Add any burger to the list below once it is ready.  Select "Eat It" button to 
        remove it from the available list.
      </p>
    </div>

    <div class="col-xs-6 text-center" id="available">
      <h2>Burgers Available</h2>
      <ul style="list-style-type:none;">
        {{#each burger_data}}
        {{#unless this.eaten}}
        <li>
          {{this.id}}. {{this.burger_name}}
            <form method="POST" action="/burgers/update?_method=PUT" class="button-size">
              <input type="hidden" name="burger_id" type="text" value="{{this.id}}">
              <button type="submit" class="btn btn-default">Eat</button>
            </form>
        </li>
        {{/unless}}
        {{/each}}
      </ul>
    </div>
   
    <div class="col-xs-6 text-center" id="task3">
      <h2>Eaten Burgers</h2>
      <ul style="list-style-type:none;">
        {{#each burger_data}}
        {{#if this.eaten}}
        <li>
          <input class="form-control" type="text" placeholder="{{this.id}}. {{this.burger_name}}" readonly>
          {{/if}}
          {{/each}}
        </li>
      </ul>
    </div>
  </div>

  
  <div class="container" id="add">
    <div class="row">
       <p id="userFav">Add A Burger</p>
      <div class="col-xs-12 text-center enter_section">
        <form action="/burgers/create" method="POST">
          <input type="text" name="burger_name" class="form-control" value="Enter a burger here" id="enter_text">
          <button type="submit" class="btn btn-primary" id="text-enter-button">Add</button>
        </form>
      </div>
    </div>
  </div>
</div>